<package displayname="Welcome Email" version="2.1" debug="false">
    <PackageTransform>
        <xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:aspdnsf="urn:aspdnsf" exclude-result-prefixes="aspdnsf">
            <xsl:output method="html" omit-xml-declaration="yes" encoding="ISO-8859-1" />
            <xsl:param name="LocaleSetting" select="/root/Runtime/LocaleSetting" />
            <xsl:param name="WebConfigLocaleSetting" select="/root/Runtime/WebConfigLocaleSetting" />
            <xsl:param name="StoreURL"><xsl:value-of select="/root/Runtime/StoreUrl" /></xsl:param>
            <xsl:param name="StyleURL"><xsl:value-of select="$StoreURL" />App_Themes/Skin_<xsl:value-of select="aspdnsf:SkinID()" />/style.css</xsl:param>

          <xsl:param name="StoreID" select="/root/Runtime/StoreID" />
          
          <xsl:template match="/">
                <html>
                    <head>
						<link rel="rel" type="text/css" href="{$StyleURL}"></link>
                        <title><xsl:value-of select="aspdnsf:AppConfig($StoreID, 'StoreName')" disable-output-escaping="yes" /></title>
                    </head>
                    <body>
						Thank you for registering with &#0160;<xsl:value-of select="aspdnsf:AppConfig($StoreID, 'StoreName')" disable-output-escaping="yes" />.  &#0160;&#0160;To access your account and view order history click <a href="{/root/System/StoreUrl}/account.aspx">here</a>
					</body>
                </html>
            </xsl:template>
		</xsl:stylesheet>
    </PackageTransform>
</package>
