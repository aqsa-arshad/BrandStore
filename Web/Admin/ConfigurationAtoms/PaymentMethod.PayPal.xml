	<Title>Configure PayPal Payments Standard</Title>

	<AppConfig Required="false" Advanced="false" FriendlyName="PayPal Account Email Address">
		<Name>PayPal.BusinessID</Name>
		<ContextualDescription><![CDATA[In order for you to receive payments, this email address must be the same one you use when signing into your PayPal account.]]></ContextualDescription>
	</AppConfig>

	<AppConfig Required="false" Advanced="false" FriendlyName="PayPal Default Locale Code">
		<Name>PayPal.DefaultLocaleCode</Name>
	</AppConfig>

	<AppConfig Required="false" Advanced="false" FriendlyName="Force Capture">
		<Name>PayPal.ForceCapture</Name>
	</AppConfig>

	<AppConfig Required="false" Advanced="false" FriendlyName="Require Confirmed Address">
		<Name>PayPal.RequireConfirmedAddress</Name>
	</AppConfig>

	<AppConfig Required="false" Advanced="false" FriendlyName="Use Instant Notification">
		<Name>PayPal.UseInstantNotification</Name>
	</AppConfig>

	<AppConfig Required="false" Advanced="false" FriendlyName="API Email Address (usually blank)">
		<Name>PayPal.API.MerchantEMailAddress</Name>
	</AppConfig>

</ConfigurationAtom>