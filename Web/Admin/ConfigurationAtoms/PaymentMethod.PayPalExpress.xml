<ConfigurationAtom>
		<HtmlHeader>
				<![CDATA[
      <div class="modalTable modalHeader">
        <table width="100%" cellpadding="4" cellspacing="0">
          <tr>
            <td>
              <img src="images/PayPal_OnBoarding_ECPaymentIcon.gif" border="0" />
            </td>
            <td>
				<p>To use PayPal Express Checkout, you need a PayPal Business Account. Once you&apos;re signed up, enter the required information below to start accepting payments.
					<a href="http://www.aspdotnetstorefront.com/linkmanager.aspx?topic=paypalexpress&type=info" target="_blank">More info</a>
					&bull;
					<a href="http://www.aspdotnetstorefront.com/linkmanager.aspx?topic=paypalexpress&type=manual" target="_blank">Configuration Help</a>
				</p>
            </td>
			<td width="200" align="center">
				<div>
					<span class="atomHeaderButtonPrompt">Don&#39;t have a PayPal Account?</span>
				</div>
				<a href="http://www.aspdotnetstorefront.com/linkmanager.aspx?topic=paypalexpress&type=signup" target="_blank" class="defaultButton">Sign Up Now</a>
			</td>
          </tr>
        </table>
      </div>
	  <div class="paypalAtomNoticeWrap">
			<div class="paypalAPIButtonWrap">
				<a data-width="366" data-height="518" href="https://www.paypal.com/us/cgi-bin/webscr?cmd=_get-api-signature&generic-flow=true" class="emphasisButton popThis" onclick="return popThis(this);" target="_blank">Get Your API Credentials</a>
			</div>
			<div class="atomHeaderNotice">To process transactions, please provide your PayPal API credentials.</div>
			<div style="clear: both;"></div>
	  </div>
    ]]>

		</HtmlHeader>
		<Title>Configure PayPal Express Checkout</Title>

		<AppConfig Required="false" Advanced="false" FriendlyName="API Username">
			<Name>PayPal.API.Username</Name>
			<ContextualDescription><![CDATA[Click 'Get Your API Credentials' to retrieve your PayPal API username.]]></ContextualDescription>
		</AppConfig>

		<AppConfig Required="false" Advanced="false" FriendlyName="API Password">
			<Name>PayPal.API.Password</Name>
			<ContextualDescription><![CDATA[Click 'Get Your API Credentials' to retrieve your PayPal API password.]]></ContextualDescription>
		</AppConfig>

		<AppConfig Required="false" Advanced="false" FriendlyName="API Signature">
			<Name>PayPal.API.Signature</Name>
			<ContextualDescription><![CDATA[Click 'Get Your API Credentials' to retrieve your PayPal API signature.]]></ContextualDescription>
		</AppConfig>

		<AppConfig Required="false" Advanced="false" FriendlyName="Allow Anonymous Checkout">
				<Name>PayPal.Express.AllowAnonCheckout</Name>
		</AppConfig>

		<AppConfig Required="false" Advanced="false" FriendlyName="Show on Cart Page">
				<Name>PayPal.Express.ShowOnCartPage</Name>
		</AppConfig>

		<AppConfig Required="false" Advanced="false" FriendlyName="Use PayPal Express Integrated Checkout">
				<Name>PayPal.Express.UseIntegratedCheckout</Name>
		</AppConfig>

		<AppConfig Required="false" Advanced="false" FriendlyName="Show Bill Me Later Button On Shopping Cart">
				<Name>PayPal.Express.ShowBillMeLaterButton</Name>
		</AppConfig>

		<AppConfig Required="false" Advanced="false" FriendlyName="API Email (usually blank)">
				<Name>PayPal.API.MerchantEMailAddress</Name>
		</AppConfig>


</ConfigurationAtom>